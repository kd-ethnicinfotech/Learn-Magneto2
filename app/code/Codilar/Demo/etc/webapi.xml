<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V2/product/getProductById/:id" method="GET">
        <service class="Codilar\Demo\Api\ProductRepositoryInterface" method="getProductById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/product/getList" method="GET">
        <service class="Codilar\Demo\Api\ProductRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/customers/info/:customerId" method="GET">
        <service class="Codilar\Demo\Api\CustomerManagementInterface" method="getCustomerById"/>
        <resources>
            <resource ref="self"/>
            <!-- Or anonymous if no login needed -->
        </resources>
    </route>
    <route url="/V1/customers/getList" method="GET">
        <service class="Codilar\Demo\Api\CustomerManagementInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Customer::customer"/>
        </resources>
    </route>
    <route url="/V1/admins/info/:adminId" method="GET">
        <service class="Codilar\Demo\Api\AdminManagementInterface" method="getAdminById"/>
        <resources>
            <resource ref="Magento_Backend::admin"/>
        </resources>
    </route>
</routes>